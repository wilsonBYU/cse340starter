<% if (title) { %>
  <h1> <%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<section id="add-inventory">
  <form action="/inv/add-inventory" method="post">
    <label for="classification_name">
      Classification
      <%- classifications %>
    </label>
    <label for="inv_make">
      Make
      <input required type="text" name="inv_make" id="inv_make" placeholder="Min of 3 characters" pattern="[A-z1-9]{3,}">
    </label>
    <label for="inv_model"pattern="[A-z1-9]{3,}">
      Model
      <input required type="text" name="inv_model" id="inv_model" placeholder="Min of 3 characters" pattern="[A-z1-9]{3,}">
    </label>
    <label for="inv_description">
      Description
      <input required type="text" name="inv_description" id="inv_description">
    </label>
    <label for="inv_image">
      Image Path
      <input required type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png" placeholder="/images/vehicles/no-image.png">
    </label>
    <label for="inv_thumbnail">
      Thumbnail Path
      <input required type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image.png" placeholder="/images/vehicles/no-image.png">
    </label>
    <label for="inv_price">
      Price
      <input required type="text" name="inv_price" id="inv_price" placeholder="Decimal or integer" pattern="^[1-9]{1,}([,.][1-9]{1,})?$">
    </label>
    <label for="inv_year">
      Year
      <input required type="text" name="inv_year" id="inv_year" placeholder="4-digit year" pattern="[1-9]{4}">
    </label>
    <label for="inv_miles">
      Miles
      <input required type="text" name="inv_miles" id="inv_miles" placeholder="digits only" pattern="[1-9]{1,}">
    </label>
    <label for="inv_color">
      Color
      <input type="text" name="inv_color" id="inv_color">
    </label>
    <input type="submit" value="Add classification">
  </form>
</section>